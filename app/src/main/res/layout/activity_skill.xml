<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.skillActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beginnerballerbg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/applogo"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="16dp">
        <ToggleButton
                android:text="Beginner"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="217dp"
                tools:layout_editor_absoluteX="100dp" android:id="@+id/bigennerBtn"
                android:layout_width="180dp" android:layout_marginLeft="0dp" android:layout_marginRight="16dp"
                android:background="@drawable/swoosh_button" android:textColor="@color/colorAccent"
                android:fontFamily="@font/montserrat" android:textOff="Beginner" android:textOn="Beginner"
                android:onClick="onClickedBiginner"/>
        <ToggleButton
                android:text="BALLER"
                android:layout_width="180dp"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="217dp"
                tools:layout_editor_absoluteX="231dp" android:id="@+id/ballerBtn"
                android:background="@drawable/swoosh_button" android:textColor="@color/colorAccent"
                android:fontFamily="@font/montserrat" android:textOff="BALLER" android:textOn="BALLER"
                android:onClick="onBallerClicked"/>
    </LinearLayout>
    <Button
            android:text="FINISH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/skillFinish" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/swoosh_button" android:fontFamily="@font/montserrat" android:textSize="14sp"
            android:textColor="@color/colorAccent" android:onClick="onSkillFinishClicked"/>

</android.support.constraint.ConstraintLayout>